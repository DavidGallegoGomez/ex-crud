<div id="users-form">
  {{#if errors}}
  <div class="alert alert-danger" role="alert">
    review the form data
  </div>
  {{/if}}

  <div class="row">
    <div class="col">
  {{#if user.isNew}}
    <form action="/users" method="POST">
  {{else}}
    <form action="/users/{{user._id}}" method="POST">
  {{/if}}

    <div class="form-group">
      <label>user name</label>
      <input type="text" class="form-control {{#if errors.name }}is-invalid{{/if}}" name="name" value="{{user.name}}"
        placeholder="Enter user name">

      {{#if errors.name }}
      <div class="invalid-feedback">
        {{errors.name}}
      </div>
      {{/if}}
    </div>

    <div class="form-group">
      <label>user email</label>
      <input type="text" class="form-control {{#if errors.email }}is-invalid{{/if}}" name="email" value="{{user.email}}"
        placeholder="Enter user email">
    
      {{#if errors.email }}
      <div class="invalid-feedback">
        {{errors.email}}
      </div>
      {{/if}}
    </div>

    <div class="form-group">
      <label>user latitude</label>
      <input type="text" class="form-control {{#if errors.latitude }}is-invalid{{/if}}" name="latitude" value="{{user.latitude}}"
        placeholder="Enter user latitude" id="lat">
    
      {{#if errors.latitude }}
      <div class="invalid-feedback">
        {{errors.latitude}}
      </div>
      {{/if}}
    </div>

    <div class="form-group">
      <label>user longitude</label>
      <input type="text" class="form-control {{#if errors.longitude }}is-invalid{{/if}}" name="longitude"
        value="{{user.longitude}}" placeholder="Enter user longitude" id="lng">
    
      {{#if errors.longitude }}
      <div class="invalid-feedback">
        {{errors.longitude}}
      </div>
      {{/if}}
    </div>

    <div class="d-flex">
      <button type="submit" class="btn btn-primary mr-3">Submit</button>
      <a class="btn btn-secondary" href="/books">Back</a>
    </div>
  </form>
  </div>

  <div class="col">
    <div id="map"></div>
  </div>
  </div>
</div>