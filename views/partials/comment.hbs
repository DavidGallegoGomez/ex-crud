<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title">{{comment.title}}</h5>
    <p class="card-text">
      {{comment.content}}
    </p>

    <div class="d-flex">
      <a href="/comments/{{comment._id}}/edit" class="btn btn-sm btn-success mr-3">Edit</a>

      <form action="/comments/{{comment._id}}/delete" method="POST">
        <button type="submit" class="btn btn-danger btn-sm text-white mr-3">
          Delete
        </button>
      </form>
    </div>
  </div>
</div>