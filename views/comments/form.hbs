{{#if errors}}
<div class="alert alert-danger" role="alert">
  review the form data
</div>
{{/if}}

{{#if comment.isNew}}
  <form action="/comments" method="POST">
{{else}}
  <form action="/comments/{{comment._id}}" method="POST">
{{/if}}

  <input type="hidden" name="book" value="{{comment.book}}"/>

  <div class="form-group">
    <label>Comment title</label>
    <input type="text" class="form-control {{#if errors.title }}is-invalid{{/if}}" name="title" value="{{comment.title}}"
      placeholder="Enter comment title">

    {{#if errors.title }}
    <div class="invalid-feedback">
      {{errors.title}}
    </div>
    {{/if}}
  </div>

  <div class="form-group">
    <label>Comment content</label>
    <textarea class="form-control {{#if errors.content }}is-invalid{{/if}}"
      name="content">{{comment.content}}</textarea>
  
    {{#if errors.content }}
    <div class="invalid-feedback">
      {{errors.content}}
    </div>
    {{/if}}
  </div>

  <div class="d-flex">
    <button type="submit" class="btn btn-primary mr-3">Submit</button>
    <a class="btn btn-secondary" href="/books/{{comment.book}}">Back</a>
  </div>
</form>